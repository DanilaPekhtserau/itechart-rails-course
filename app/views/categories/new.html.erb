<h1>New category</h1>

<%= link_to 'Back', "/categories" %>

<p>
<%= form_with model: @category do |f| %>
  <%= f.text_field :title, required: true, minlength: 2, placeholder: "Category title" %>
  debit <%= f.check_box :debit%>
  <%= f.collection_select(:id, current_user.people.order(:name),:id,:name, {:prompt => nil}, {:multiple => true})%>
  <%= f.submit "Submit category"%>
<% end %>